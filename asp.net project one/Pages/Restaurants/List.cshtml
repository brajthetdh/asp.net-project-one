@page 
@model asp.net_project_one.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group">
                <button class="btn btn-primary">
                    <i class="bg-danger"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">

    @foreach(var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a class="btn btn-lg bg-success" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                Detail
            </a>
        </td>
        <td>
            <a class="btn btn-lg bg-success" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                Edit
            </a>
        </td>
    </tr>
    }

</table>

@Model.Message